
// A simple program that calculates the length of the collatz sequence.
main() {
    n: int = 5;

    collatzLength: int = 0;
    while (n > 1) {
        println(unparseInt(n));
        if (n % 2 == 0) {
            println(unparseInt(1));
            n = (n / 2);
        } else {
            println(unparseInt(0));
            n = (3*n) + 1;
        }
            
        collatzLength = collatzLength+1;
    }
    print(unparseInt(collatzLength));
}
