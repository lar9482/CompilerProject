
// A simple program that calculates the length of the collatz sequence.
main() {
    limit: int = 260000000;
    n: int = 100;

    s: int = 0;
	first: int = 0;
    while (s < limit) {
        if (n % 2 == 0) {
            n = n / 2;
        } else {
            n = 3 * n + 1;
        }
            
        s = s+1;
		if (n == 1 && first == 0) {
            first = s;
        }
    }
    println(unparseInt(first));
    println(unparseInt(n));
}
